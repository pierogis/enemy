generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  discordId Int
  inventory Deed[]
}

model Item {
  id     Int    @id @default(autoincrement())
  damage Int
  units  Deed[]
}

model Deed {
  id       Int     @id @default(autoincrement())
  itemId   Int
  ownerId  Int
  item     Item    @relation(fields: [itemId], references: [id])
  user     User    @relation(fields: [ownerId], references: [id])
  equipped Boolean
}
